<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        >
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:padding="8dp">
           <TextView
               android:id="@+id/avengers"
               app:layout_constraintTop_toTopOf="parent"
               android:text="Avengers"
               android:textSize="25sp"
               android:layout_marginTop="5dp"
               android:textColor="@color/black"
               android:textStyle="normal"
               android:layout_marginLeft="20dp"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_width="200dp"
               android:gravity="left|center"
               android:layout_height="35dp"/>
           <TextView
               android:id="@+id/text_names"
               android:textStyle="normal"
               android:textColor="@color/black"
               android:textSize="20sp"
               android:text="sdvfdvsdsbdfvdvsdvvffvd"
               android:layout_marginLeft="20dp"
               android:padding="2dp"
               app:layout_constraintTop_toBottomOf="@id/avengers"
               app:layout_constraintLeft_toLeftOf="@id/avengers"
               android:layout_marginTop="5dp"
               android:layout_width="match_parent"
               android:gravity="left|center"
               android:layout_height="30dp"/>
           <TextView
               android:id="@+id/date"
               app:layout_constraintTop_toTopOf="@id/avengers"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_marginRight="10dp"
               android:textSize="20sp"
               android:textColor="@color/black"
               android:textStyle="normal"
               android:text="dfgfhgfd"
                android:gravity="center"
               android:layout_width="140dp"
               android:layout_height="30dp"/>
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/delete"
               android:background="@drawable/button"
               android:text="Delete"
               android:textAllCaps="false"
               android:layout_marginTop="5dp"
               android:textStyle="normal"
               android:textColor="#fff"
               android:textSize="15sp"
               app:layout_constraintTop_toBottomOf="@id/text_names"
               app:layout_constraintRight_toRightOf="@id/date"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_width="100dp"
               android:layout_height="40dp"/>
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/edite"
               android:text="Edite"
               android:textAllCaps="false"
               android:textStyle="normal"
               android:textColor="#fff"
               android:layout_marginTop="5dp"
               android:textSize="15sp"
               android:background="@drawable/button"
               app:layout_constraintTop_toBottomOf="@id/text_names"
               app:layout_constraintRight_toLeftOf="@id/delete"
               android:layout_marginRight="15dp"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_width="100dp"
               android:layout_height="40dp"/>
       </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>