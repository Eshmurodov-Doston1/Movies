<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_add"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:backgroundTint="#66D6EF"
        android:layout_height="60dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="30dp"
                android:textStyle="normal"
                android:textColor="#fff"
                android:textSize="30sp"
                android:text="Add movie"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/card_add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="30dp">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide1"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/edite_name"
            android:padding="15dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:background="@drawable/edit"
            android:hint="Movie name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guide1"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="0dp"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide2"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.26"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/authors"
            android:padding="15dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:background="@drawable/edit"
            android:hint="Movie authors"
            app:layout_constraintTop_toBottomOf="@id/guide1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guide2"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="0dp"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide3"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/movie"
            android:padding="15dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:background="@drawable/edit"
            android:hint="About movie"
            android:gravity="top|left"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/guide2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guide3"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide4"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.89"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/date"
            android:padding="15dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:background="@drawable/edit"
            android:hint="Movie date"
            android:layout_marginTop="10dp"
            android:inputType="date"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/guide3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guide4"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save_btn"
            app:layout_constraintTop_toBottomOf="@id/guide4"
            android:textStyle="normal"
            android:textColor="#fff"
            android:textSize="25sp"
            android:text="Save"
            android:textAllCaps="false"
            app:layout_constraintRight_toRightOf="@id/date"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/button"
            android:layout_width="130dp"
            android:layout_height="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    

</androidx.constraintlayout.widget.ConstraintLayout>